@model IEnumerable<IslandFoodmart.Models.ShoppingItem>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShoppingOrder)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShoppingOrder.ShoppingOrderID)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ShoppingItemID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ShoppingItemID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ShoppingItemID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
