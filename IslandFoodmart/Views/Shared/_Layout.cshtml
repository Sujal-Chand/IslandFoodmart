                            <li><a class="dropdown-item" href="#">Drinks</a></li>
                            <li><a class="dropdown-item" href="#">Personal Care</a></li>
                            <li>
                                <hr class="dropdown-divider">
                            </li>
                            <li class="nav-item dropend">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Shop All
                                </a>
                            </li>
                        </ul>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="#">Deals</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="ContactUs" >Contact Us</a>
                    </li>
                </ul>
                <form class="d-flex"  role="search">
                    <input class="form-control me-2" type="search" style="border-radius: 10px;" placeholder="Search" aria-label="Search">
                    <button class="btn btn-outline-light" type="submit">Search</button>
                </form>
                <partial name="_LoginPartial" />
            </div>
        </div>
    </nav>
